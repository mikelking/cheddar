<?xml version="1.0"?>
<ruleset name="BASE">
	<description>Dummy Coding Standards</description>

	<rule ref="WordPress-Core">
		<!-- This rule is foolish and breaks many clean code uses -->
		<exclude name="PEAR.Functions.FunctionCallSignature.Indent" />
		<exclude name="WordPress.Files.FileName.InvalidClassFileName" />
		<!-- <exclude name="WordPress.PHP.YodaConditions" /> -->
		<!-- <exclude name="WordPress.Variables.GlobalVariables" /> -->
		<!-- This rule is foolish and breaks many legitimate uses -->
		<exclude name="WordPress.XSS.EscapeOutput.OutputNotEscaped" />
		<exclude name="WordPress.Files.FileName.UnderscoresNotAllowed" />
		<!-- <exclude name="WordPress.WP.EnqueuedResources.NonEnqueuedScript" /> -->
